<script src="https://cdn.tailwindcss.com"></script>

<form
    action="{{URL}}/comercio/editar/{{comercio.idComercio}}" method="POST">
    <input type="hidden" name="_method" value="PUT">

    <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">Editar Comercio</h2>
    <p class="leading-relaxed mb-5 text-gray-600">Modifica los detalles del comercio</p>

    <!-- Nombre del comercio -->
    <div class="relative mb-4">
        <label for="nombre" class="leading-7 text-sm text-gray-600">Nombre</label>
        <input type="text" id="nombre" name="nombre" value="{{comercio.nombre}}"
            class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
            required>
    </div>

    <!-- CUIT del comercio -->
    <div class="relative mb-4">
        <label for="cuit" class="leading-7 text-sm text-gray-600">CUIT</label>
        <input type="text" id="cuit" name="cuit" value="{{comercio.cuit}}"
            class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
            required>
    </div>

    <!-- Dirección del comercio -->
    <div class="relative mb-4">
        <label for="direccion" class="leading-7 text-sm text-gray-600">Dirección</label>
        <input type="text" id="direccion" name="direccion" value="{{comercio.direccion}}"
            class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
            required>
    </div>
    <div class="relative flex space-x-4">
        <button type="submit"
            class="flex-1 text-amber-500 bg-zinc-800 border-0 py-2 px-6 focus:outline-none hover:text-zinc-800 hover:bg-amber-500 rounded text-lg">Guardar</button>
        
    </div>
</form>