                            <div class="flex space-x-2 ml-auto text-left">
                                <!-- Botón Eliminar -->
                                <form action="{{URL}}/eliminarProducto/{{this.idProducto}}?_method=DELETE"
                                    method="POST">
                                    <button type="submit"
                                        class="text-sm bg-red-500 hover:bg-red-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline">
                                        Eliminar
                                    </button>
                                </form>

                                <!-- Botón Editar -->
                                <a href="{{URL}}/editarProducto/{{this.idProducto}}"
                                    class="bg-amber-500 hover:bg-amber-800 text-sm text-black font-medium py-1 px-2 rounded focus:outline-none focus:shadow-outline">
                                    Editar
                                </a>

                            </div>
                        </td> --}}
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex space-x-2 ml-auto text-left">
                                <form action="{{URL}}/eliminarProducto/{{this.idProducto}}?_method=DELETE" method="POST"
                                    class="m-0">
                                    <button type="submit"
                                        class="text-sm bg-red-500 hover:bg-red-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline">
                                        Eliminar
                                    </button>
                                </form>
                                <a href="{{URL}}/editarProducto/{{this.idProducto}}"
                                    class="bg-amber-500 hover:bg-amber-800 text-sm text-black font-medium py-1 px-2 rounded focus:outline-none focus:shadow-outline open-modal">
                                    Editar
                                </a>
                            </div>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <ul>
            </ul>

        </div>
    </div>
</body>

</html>