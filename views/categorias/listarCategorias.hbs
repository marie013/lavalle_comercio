<html>

<head>
    <title>Categorias</title>
</head>

<body>
    {{>navbarAdm}}
    <div class="bg-gray-100 p-6 rounded-lg shadow-lg">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h2 class="text-xl font-semibold text-gray-900">Categorias</h2>
            </div>
            <div class="relative group bg-purple-600 text-white py-2 px-4 rounded-lg hover:bg-purple-700">
                <a href="#">AÃ±adir</a>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg">
                <thead>
                    <tr class="bg-gray-100 border-b">
                        <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Nombre</th>
                        <th class="px-6 py-3"></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {{#each categorias}}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{this.nombre}}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            {{!-- modificar --}}
                            <form action="{{URL}}/eliminarCategoria/{{idCategoria}}?_method=DELETE" method="POST">
                                <button type="submit"
                                    class="text-sm bg-red-500 hover:bg-red-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline">Eliminar</button>
                            </form>
                        </td>
                        <td>
                            {{!-- modificar --}}
                            <form action="{{url}}/editarCategoria/{{idCategoria}}" method="GET">
                                <button type="submit"
                                    class="text-sm bg-blue-500 hover:bg-blue-800 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline">Modificar</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>