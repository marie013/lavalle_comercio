<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Login</title>
  </head>
  <body
    class="overflow-y-hidden bg-gray-100 py-6 flex flex-col justify-center sm:py-12 scroll-smooth"
  >
    <div class="relative py-3 sm:max-w-xl sm:mx-auto p-28">
      <div
        class="absolute mx-auto inset-0 bg-gradient-to-r from-amber-500 to-amber-700 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"
      ></div>
      <div
        class="relative bg-white shadow-lg sm:rounded-3xl w-[24rem] px-6 py-6"
      >
        <div class="max-w-md mx-auto">

          <div class="flex justify-center mb-8">
            <img class="h-auto size-24" src="/logo.png" alt="lavalle ofertas" />
          </div>

          <h2 class="text-2xl font-bold text-center text-amber-500 mb-8">Iniciar
            sesión</h2>

          <div class="divide-y divide-gray-200">
            <form class="space-y-6" action="{{url}}/menu" method="POST">
              <div class="relative">
                <input
                  id="user"
                  name="email"
                  type="text"
                  autocomplete="off"
                  required
                  class="peer px-2 placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-amber-500"
                  placeholder="Email"
                />
                <label
                  for="user"
                  class="absolute left-0 -top-3.5 text-gray-600 text-sm"
                >Email</label>
              </div>
              <div class="relative">
                <input
                  id="password"
                  name="contrasena"
                  type="password"
                  autocomplete="current-password"
                  required
                  class="peer px-2 placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-amber-500"
                  placeholder="Contraseña"
                />
                <label
                  for="password"
                  class="absolute left-0 -top-3.5 text-gray-600 text-sm"
                >Contraseña</label>
              </div>
              <div class="flex justify-between text-sm">

                <a
                  href="/registrarUsuario"
                  class="font-semibold text-amber-600 hover:text-amber-700"
                >¿Nuevo aquí? ¡Regístrate!</a>
              </div>
              <div class="relative">
                <button
                  type="submit"
                  class="bg-zinc-800 w-full text-amber-500 rounded-md px-3 py-2 text-sm font-medium hover:bg-zinc-700"
                >Enviar</button>
              </div>

              <div style="color: red; font-weight: bold; height:2rem;">
                {{#if error}}
                  {{error}}
                {{/if}}
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>