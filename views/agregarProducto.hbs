<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Producto</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <section class="text-gray-600 body-font h-screen flex justify-center items-center">
        <form id="agregarProductoForm" enctype="multipart/form-data">
            <div class="container px-5 py-24 mx-auto flex justify-center items-center">
                <div class="w-full max-w-lg bg-gray-100 rounded-lg p-8 flex flex-col mt-10 md:mt-0 shadow-md">
                    <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">Agregar Producto</h2>
                    <p class="leading-relaxed mb-5 text-gray-600">Completa los detalles del producto</p>
                    <div class="relative mb-4">
                        <input type="text" id="nombre" name="nombre" placeholder="Nombre del producto" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base py-1 px-3">
                    </div>
                    <div class="relative mb-4">
                        <input type="number" id="precio" name="precio" placeholder="Precio" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base py-1 px-3">
                    </div>
                    <div class="relative mb-4">
                        <input type="text" id="detalles" name="detalles" placeholder="Detalle" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base py-1 px-3">
                    </div>
                    <div class="relative mb-4">
                        <input type="text" id="categoria" name="categoria" placeholder="CategorÃ­a" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base py-1 px-3">
                    </div>
                    <div class="relative mb-4">
                        <input type="number" id="disponibilidad" name="disponibilidad" placeholder="Disponibilidad" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base py-1 px-3">
                    </div>
                    <div class="relative mb-4">
                        <input type="checkbox" id="oferta" name="oferta" class="mr-2">
                        <span>Oferta</span>
                    </div>
                    <div class="relative mb-4">
                        <input type="number" id="descuento" name="descuento" placeholder="Descuento" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base py-1 px-3">
                    </div>
                    <div class="relative mb-4">
                        <input type="file" id="imgProducto" name="imgProducto" multiple accept="image/png, image/jpeg, image/webp" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base py-1 px-3">
                    </div>
                    <div class="flex space-x-4">
                        <button type="button" class="flex-1 bg-blue-500 text-white py-2 px-6 rounded" onclick="submitForm()">Agregar</button>
                        <button type="button" class="flex-1 bg-gray-300 py-2 px-6 rounded" onclick="window.location.href='/menu'">Cancelar</button>
                    </div>
                </div>
            </div>
        </form>
        <script>
            async function submitForm() {
                const form = document.getElementById('agregarProductoForm');
                const formData = new FormData(form);
                formData.set("oferta", document.getElementById("oferta").checked);

                try {
                    const response = await axios.post('http://localhost:3333/producto/registrar/123', formData, {
                        headers: { 'Content-Type': 'multipart/form-data' }
                    });
                    alert('Producto agregado exitosamente');
                } catch (error) {
                    console.error('Error al enviar el producto:', error.response?.data || error.message);
                    alert('Error al agregar producto');
                }
            }
        </script>
    </section>
</body>
</html>
