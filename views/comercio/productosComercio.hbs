<title>Tus productos</title>
{{>navbarUser}}
<div class="bg-gray-100 p-6 rounded-lg shadow-lg ">
    <div class="flex justify-between items-center mb-22 z-70">
        <br>
        <br>
    </div>
    <div class="flex justify-between items-center">
        <h2 class="text-lg font-bold text-amber-500">Tus Productos</h2>
        <a href="{{URL}}/agregarProducto" class="text-md bg-amber-500 hover:bg-amber-800 text-black font-medium py-2 px-2 rounded focus:outline-none focus:shadow-outline">Añadir Producto</a>
    </div>
    
    {{#each comercios}}
    <div class="mb-6">
        <h3 class="text-lg font-bold text-gray-900">{{this.nombre}}</h3> 
        <div class="overflow-x-auto mt-4">
        <table class="min-w-full bg-white border border-gray-200 rounded-lg mt-4">
            <thead>
                <tr class="bg-gray-100 border-b">
                    <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
                    <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Categoria</th>
                    <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Precio</th>
                    <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Disponibilidad</th>
                    <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider">Oferta</th>
                    <th class="px-6 py-3"></th>
                    <th class="px-6 py-3"></th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {{#each this.productos}}
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{this.nombre_producto}}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{this.nombreCategoria}}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{this.precio}}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{this.disponibilidad}}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        {{#if (eq this.oferta "true")}}Sí{{else}}No{{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <form action="{{URL}}/eliminarProducto/{{this.id_producto}}?_method=DELETE" method="POST" class="my-0">
                            <button type="submit"
                                class="text-sm bg-red-500 hover:bg-red-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline">
                                Eliminar
                            </button>
                        </form>
                    </td>
                    <td>
                        <a href="{{URL}}/editarProducto/{{this.id_producto}}"
                            class="text-sm font-medium bg-amber-500 hover:bg-amber-600 text-black py-1 px-2 rounded focus:outline-none focus:shadow-outline">
                            Editar
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        </div>
    </div>
    {{/each}}
</div>
